<div class="missing-tags-dialog">
    <div class="info-message">
        @InfoMessage
    </div>
    <RadzenDataGrid Data="@MissingTags" TItem="string"
                    AllowPaging="false"
                    AllowSorting="true"
                    Style="flex: 1; min-height: 0;">
        <Columns>
            <RadzenDataGridColumn TItem="string" Title="Тег (адрес)">
                <Template Context="tagName">
                    @tagName
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
    <div class="dialog-buttons">
        <RadzenButton Text="Закрыть" Icon="close"
                      Click="@OnClose"
                      ButtonStyle="ButtonStyle.Primary" />
    </div>
</div>

@code {
    [Parameter]
    public List<string> MissingTags { get; set; } = [];
    [Parameter]
    public string InfoMessage { get; set; } = "В PLC DB_Recipe отсутствуют следующие теги:";
    [Inject]
    public required DialogService DialogService { get; set; }

    private void OnClose()
    {
        DialogService.Close();
    }
}
