@using Final_Test_Hybrid.Models.Steps

<div class="unknown-steps-dialog">
    <div class="info-message">
        В файле последовательности обнаружено неизвестных шагов: @UnknownSteps.Count
    </div>
    <RadzenDataGrid Data="@UnknownSteps" TItem="UnknownStepInfo"
                    AllowPaging="false"
                    AllowSorting="true"
                    Style="flex: 1; min-height: 0;">
        <Columns>
            <RadzenDataGridColumn TItem="UnknownStepInfo" Property="StepName" Title="Название шага" />
            <RadzenDataGridColumn TItem="UnknownStepInfo" Property="Row" Title="Строка" />
            <RadzenDataGridColumn TItem="UnknownStepInfo" Property="Column" Title="Колонка" />
        </Columns>
    </RadzenDataGrid>
</div>

@code {
    [Parameter]
    public List<UnknownStepInfo> UnknownSteps { get; set; } = [];
}
