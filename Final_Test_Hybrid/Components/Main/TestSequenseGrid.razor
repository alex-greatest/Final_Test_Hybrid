@using Final_Test_Hybrid.Services.Steps.Infrastructure.Execution
@implements IDisposable
@inject TestSequenseService TestSequenseService

<div class="test-sequense-grid">
    <RadzenDataGrid @ref="_grid"
        TItem="TestSequenseData"
        Data="_data"
        ColumnWidth="150px"
        AllowPaging="false"
        AllowSorting="false"
        >
        <Columns>
            <RadzenDataGridColumn TItem="TestSequenseData" Property="Module" Title="Модуль">
                <Template Context="data">
                    <span class="cell-text" style="@GetCellStyle(data)" title="@data.Module">@data.Module</span>
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="TestSequenseData" Property="Description" Title="Описание">
                <Template Context="data">
                    <span class="cell-text" style="@GetCellStyle(data)" title="@data.Description">@data.Description</span>
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="TestSequenseData" Property="Status" Title="Статус" Width="50px">
                <Template Context="data">
                    <span class="cell-text" style="@GetCellStyle(data)" title="@data.Status">@data.Status</span>
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="TestSequenseData" Property="Result" Title="Результаты">
                <Template Context="data">
                    <span class="cell-text" style="@GetCellStyle(data)" title="@data.Result">@data.Result</span>
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="TestSequenseData" Property="Range" Title="Пределы">
                <Template Context="data">
                    <span class="cell-text" style="@GetCellStyle(data)" title="@data.Range">@(string.IsNullOrEmpty(data.Range) ? "\u00A0" : data.Range)</span>
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
</div>

@code {
    private RadzenDataGrid<TestSequenseData>? _grid;
    private IEnumerable<TestSequenseData> _data = [];

    protected override void OnInitialized()
    {
        _data = TestSequenseService.Data;
        TestSequenseService.OnDataChanged += HandleDataChanged;
    }

    private async void HandleDataChanged()
    {
        try
        {
            await InvokeAsync(async () =>
            {
                _data = TestSequenseService.Data;
                StateHasChanged();
                if (_grid != null)
                {
                    await _grid.Reload();
                }
            });
        }
        catch (Exception)
        {
            // ignored
        }
    }

    private static string GetCellStyle(TestSequenseData data) =>
        data.IsError
            ? "background-color: red; display: flex; align-items: center; margin: -0.25rem -1rem; padding: 0.25rem 1rem;"
            : "display: flex; align-items: center; margin: -0.25rem -1rem; padding: 0.25rem 1rem;";

    public void Dispose()
    {
        TestSequenseService.OnDataChanged -= HandleDataChanged;
    }
}
